<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/orange_base"
                android:startColor="@color/orange_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/green_dark"
                android:endColor="@color/green_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>